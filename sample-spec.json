{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Sample spec",
    "description": "Sample spec for Swagger",
    "termsOfService": "http://swagger.io/terms/"
  },
  "basePath": "/",
  "tags" : [
    {"name": "Tag1", 
    "description": "API for something"
    }
    //This is where you describe the tags
  ],
  "schemes": [
    "https"
    //Use https for a https site, or http otherwise
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/path/to/method": {
      //This should be the path to your API method
       "post": {
        //What type of request this method is
          "tags": ["Tag1"],
          //All Apis that have the "Tag1" tag will be grouped together
          "description": "what this API does",
          "operationId": "for the URL",
          "produces": [
            "application/json"
          ],
          "parameters": [
              {
                "name": "Job Parameters",
                "in": "body",
                //"body" allows the user to input a json. 
                "description": "Job to add to the database",
                "required": true,
              "schema": {
                //model schema will be generated from 'definitions' at the bottom of this file
                "$ref": "#/definitions/createJobs"
                }
            }
          ],
          "responses": {
            "200": {
              "description": "createJobs response",
              "schema": {
                 "$ref": "#/definitions/createJobsRes"
              }
            }
          }
        }
    },
    "/path/to/method/{jobID}": {
      //{jobID} allows the corresponding jobID parameter to appear in the API path
        "delete":{
          "tags":["Tag1"],
          "description":"Deletes a specific job",
          "operationId":"deleteJob",
          "produces": [
            "application/json"
          ],
          "parameters":[
              {
                "name": "jobID",
                "in": "path",
                //"path" specifies that this parameter will be in the path of the API
                "description": "ID of job to delete",
                "required": true,
                "type": "string"
              }
            ],
          "responses": {
            "200": {
              "description": "delete response",
              "schema":{
                "$ref":"#/definitions/deleteJob"
              }
            }
          }
        },
      //If two methods have the same path, but different request types, nest them like so 
      "get":{
          "tags": [ "Tag1"],
          "description": "Returns the status of a specific job",
          "operationId": "findJobById",
          "produces": [
            "application/json"
          ],
          "parameters": [
              {
                "name": "jobID",
                "in": "path",
                "description": "ID of job to fetch",
                "required": true,
                "type": "string"
              }
            ],
        "responses": {
            "200": {
              "description": "job response",
              "schema": {
                "$ref": "#/definitions/job"
              }
            }
          }
        }
      }
  },
  "definitions": {
    //These are model schema definitions
    "createJobs": {
      "properties": {
        "eventId": {
          "required":true,
          //Whether the parameter is optional or not
          "type": "string",
          "example": "mathmaticial"
          //example to put in the model schema, swagger will put the 
          // type of the parameter as the example. 
        },
        "numberRequired": {
          "required":true,
          "type":"integer",
          "format": "int64", // specify int64 or int32
          "example": 500
        } 
      }
    },
    "job": {
        "properties": {
          "jobID": {
            "required":true,
            "type": "string",
            "example": "23423456543"
          },
          "request": {
            "required":true,
            "type": "schema",
            //example of a nested schema
            "example": {
              "eventId":"mathmaticial",
              "numberRequired": 500
            }
          }
      }
    },
    "createJobsRes": {
        "properties": {
            "jobID": {
              "required": true,
              "type" : "string",
              "example" : "12321432423"
            }
        }
    },
    "deleteJob": {
        "properties": {
            "jobID": {
              "required": true,
              "type" : "string",
              "example" : "234344234234"
            },
            "status" : {
              "required": true,
              "type": "string",
              "example": "deleted"
            }
        }
    },
    "400error" : {
       "properties": {
        "message": {
          "type": "string",
          "example" : "400 Bad Request"
        }
      }
    }
  }
}